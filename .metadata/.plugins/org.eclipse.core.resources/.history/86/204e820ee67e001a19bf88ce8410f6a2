import java.util.ArrayList;

public class CollisionListener {

	public CollisionListener() {
	}

	public boolean update(GameObjectlist gos){//tureならゲームオーバー
		ArrayList<Teki> tekilist = new ArrayList<Teki>(gos.getTekilist().clone());
		ArrayList<Tama> tamalist = gos.getTamalist().clone();
		for(int i = 0;i<tekilist.size();i++){
			for(int j =0; j<tamalist.size();j++){
				if (tekilist.get(i).collisionCheck(gos.getTamalist().get(j))){//当たったら消す
					System.out.println("hit");
					gos.getTamalist().remove(gos.getTamalist().indexOf(gos.getTamalist().get(i)));
					gos.remove(gos.getTamalist(tamalist.get(j)));
				}
			}
			if ((tekilist.get(i).collisionCheck(jiki))){
				return true;//ゲームオーバー
			}
		}
		return false;
	}

}
